<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_txt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="0"
            android:inputType="textNoSuggestions"
            android:textAlignment="viewEnd"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/black_100"
            android:textAlignment="viewEnd"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <Button
                android:id="@+id/one"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="3"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="C"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/orange_106"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <Button
                android:id="@+id/four"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="4"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="5"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="6"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/div"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="/"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/green_105"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <Button
                android:id="@+id/seven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="7"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="8"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="9"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/multiply_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="*"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/yellow_103"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="541dp">

            <Button
                android:id="@+id/dot_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="*"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/add_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:text="+"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/black_100"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:text="-"
                android:clickable="true"
                android:textSize="35sp"
                android:background="@drawable/round_button"
                android:textColor="@color/sea_green_104"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <Button
            android:id="@+id/equal_btn"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="="
            android:clickable="true"
            android:textSize="35sp"
            android:background="@drawable/round_button"
            android:textColor="@color/green_105"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>