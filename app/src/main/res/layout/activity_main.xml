<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/input_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="viewEnd"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green_105"/>

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="0"
            android:textColor="@color/black_100"
            android:textAlignment="viewEnd"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <ImageView
                android:id="@+id/one_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/one"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/two_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/two"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/three_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/three"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/clear_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/clear"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/four_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/four"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/five_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/five"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/six_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/six"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/div_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/div"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:id="@+id/seven_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/seven"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/eight_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/eight"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/nine_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/nine"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/multiply_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/multi"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="541dp">

            <ImageView
                android:id="@+id/dot_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dot"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/zero_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/zero"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/add_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/plus"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />

            <ImageView
                android:id="@+id/minus_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/minus"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="207dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/equal_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/equal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>